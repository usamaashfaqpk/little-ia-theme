{% comment %}
  SECTION: Shop by Age – Collection Tabs
  File: sections/shop-our-best-seller-tabs.liquid
{% endcomment %}

<section class="shop-our-best-seller">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="shop-our-best-seller__heading font-sacramento">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="shop-our-best-seller__subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    <!-- Tabs -->
    <div class="shop-our-best-seller__tabs" role="tablist">
      {% for block in section.blocks %}
        <button
          class="shop-our-best-seller__tab{% if forloop.first %} is-active{% endif %}"
          data-tab="tab-{{ block.id }}"
          role="tab"
          {{ block.shopify_attributes }}
        >
          {{ block.settings.tab_title }}
        </button>
      {% endfor %}
    </div>

    <!-- Panels -->
    <div class="shop-our-best-seller__panels">
      {% for block in section.blocks %}
        {% assign collection = collections[block.settings.collection] %}

        <div
          class="shop-our-best-seller__panel{% if forloop.first %} is-active{% endif %}"
          id="tab-{{ block.id }}"
          role="tabpanel"
        >
          {% if collection != blank %}
            <button class="shop-our-best-seller__nav shop-our-best-seller__nav--prev" aria-label="Previous">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <polyline points="15 18 9 12 15 6"></polyline>
              </svg>
            </button>
            <div class="shop-our-best-seller__viewport">
              <div class="shop-our-best-seller__grid">
                {% for product in collection.products %}
                  <div class="shop-our-best-seller__item">
                  <div>
                    <a href="{{ product.url }}" class="shop-our-best-seller__image">
                      {{ product.featured_image | image_url: width: 323, height: 324 | image_tag }}
                    </a>
                  </div>
                  <p class="shop-our-best-seller__tag">{{ product.type }}</p>
                  <p class="shop-our-best-seller__label">{{ product.title }}</p>
                  <p class="shop-our-best-seller__label">
                    AED {{ product.price | money_without_currency }}
                    
                    {% if product.compare_at_price > product.price %}
                      <span class="original-price" style="text-decoration: line-through; margin-left: 8px; color: #888;">
                        AED {{ product.compare_at_price | money_without_currency }}
                      </span>

                      {% assign price = product.price | money_without_currency %}
                      {% assign compare_price = product.compare_at_price | money_without_currency %}
                      {% assign discount = compare_price | minus: price %}
                      {% assign discount_percent = discount | divided_by: compare_price | times: 100 | round %}
                      <span class="discount-percent" style="background-color:#FDF8E7; color: #1D425A; font-weight: 400; margin-left: 8px;">
                        ({{ discount_percent }}% OFF)
                      </span>
                    {% endif %}
                  </p>
                  </div>
                {% endfor %}
              </div>
            </div>
            <button class="shop-our-best-seller__nav shop-our-best-seller__nav--next" aria-label="Next">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <polyline points="9 18 15 12 9 6"></polyline>
              </svg>
            </button>
            {% if block.settings.button_label != empty %}
              <div class="shop-our-best-seller__cta">
                <a href="{{ collection.url }}" class="button-secondary">
                  {{ block.settings.button_label | default: section.settings.default_button_label }}
                </a>
              </div>
            {% endif %}
          {% else %}
            <p>No collection selected.</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .shop-our-best-seller {
    padding: 60px 0;
    text-align: center;
    background-color: #fffaf4;
  }
  .shop-our-best-seller__heading {
    font-size: 2.375rem;
    color: #7295bb;
    font-family: 'Sacramento';
  }
  .shop-our-best-seller__subheading {
    margin-bottom: 30px;
    font-size: 2.375rem;
  }
  .shop-our-best-seller__tabs {
    display: flex;
    justify-content: center;
    gap: 24px;
    margin-bottom: 30px;
  }
  .shop-our-best-seller__tab {
    background: none;
    border: none;
    font-size: 14px;
    cursor: pointer;
    padding-bottom: 6px;
    border-bottom: 2px solid transparent;
  }
  .shop-our-best-seller__tab.is-active {
    border-color: currentColor;
    font-weight: 600;
  }
  .shop-our-best-seller__panel {
    display: none;
  }
  .shop-our-best-seller__panel.is-active {
    display: block;
  }

  .shop-our-best-seller__viewport {
    overflow: hidden;
    width: 100%;
  }

  .shop-our-best-seller__grid {
    display: flex !important;
    flex-direction: row !important;
    gap: 16px !important;
    padding: 0 50px !important;
    flex-wrap: nowrap; /* prevent wrapping */
  }

  .shop-our-best-seller__viewport {
    width: 100%;
    overflow-x: auto;
    overflow-y: hidden;
    scroll-behavior: smooth;
    scrollbar-width: none;
  }

  .shop-our-best-seller__viewport::-webkit-scrollbar {
    display: none;
  }

  .shop-our-best-seller__item {
    flex: 0 0 calc((100% - (16px * 3)) / 4); /* 4 items per view */
    box-sizing: border-box;
  }

  .shop-our-best-seller__image {
    display: block;
    width: 323px !important;
    height: 324px !important;
    object-fit: cover;
  }
  .shop-our-best-seller__label {
    font-size: 20px;
    text-align: left;
    font-weight: 500 !important;
    width: 100%;

    white-space: nowrap;       /* prevent text from wrapping */
    overflow: hidden;          /* hide overflow */
    text-overflow: ellipsis;   /* show "..." at the end */
    pointer-events: none;
  }

  .shop-our-best-seller__tag {
    padding: 2px 14px;
    border-radius: 100px;
    background: #EEEEEE;
    width: fit-content;
    text-transform: uppercase;
    font-size: 12px;
  }

  .shop-our-best-seller__cta {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-top: 30px;
  }
  @media (max-width: 768px) {
    .shop-our-best-seller__item {
      flex: 0 0 calc((100% - 16px) / 2); /* 2 items per view on mobile */
    }

    .shop-our-best-seller__image {
      width: 173px !important;
      height: 175px !important;
      object-fit: cover;
    }
  }

  .shop-our-best-seller__panel {
    position: relative;
  }

  .shop-our-best-seller__nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 38px;
    height: 38px;
    border-radius: 50%;
    border: 1px solid #7295bb;
    background: #fff;
    color: #7295bb;
    font-size: 22px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }

  .shop-our-best-seller__nav--prev {
    left: 10px;
  }

  .shop-our-best-seller__nav--next {
    right: 10px;
  }
</style>

<script>
  (() => {
    const tabs = document.querySelectorAll('.shop-our-best-seller__tab');
    const panels = document.querySelectorAll('.shop-our-best-seller__panel');

    tabs.forEach((tab) => {
      tab.addEventListener('click', () => {
        // Activate tab
        tabs.forEach((t) => t.classList.remove('is-active'));
        panels.forEach((p) => p.classList.remove('is-active'));

        tab.classList.add('is-active');
        const panel = document.getElementById(tab.dataset.tab);
        panel.classList.add('is-active');

        const viewport = panel.querySelector('.shop-our-best-seller__viewport');
        if (viewport) {
          viewport.scrollTo({ left: 0, behavior: 'instant' });
        }

        // Update arrows scroll for new active tab
        updateArrows(panel);
      });
    });

    function updateArrows(panel) {
      const viewport = panel.querySelector('.shop-our-best-seller__viewport');
      const next = panel.querySelector('.shop-our-best-seller__nav--next');
      const prev = panel.querySelector('.shop-our-best-seller__nav--prev');
      const items = panel.querySelectorAll('.shop-our-best-seller__item');

      if (!viewport || !next || !prev || !items.length) return;

      const gap = 16;
      const itemsPerView = window.innerWidth <= 768 ? 2 : 4;

      const scrollAmount =
        Array.from(items)
          .slice(0, itemsPerView)
          .reduce((total, item) => total + item.offsetWidth, 0) +
        gap * (itemsPerView - 1);

      next.onclick = () => viewport.scrollBy({ left: scrollAmount, behavior: 'smooth' });
      prev.onclick = () => viewport.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    }

    // Initialize arrows for first tab
    const firstPanel = document.querySelector('.shop-our-best-seller__panel.is-active');
    if (firstPanel) updateArrows(firstPanel);
  })();
</script>

{% schema %}
{
  "name": "Shop by Age – Tabs",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Age"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Choose the perfect age group"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Products per tab",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "icons_style",
      "label": "t:settings.icons",
      "options": [
        {
          "value": "arrows",
          "label": "t:options.arrows"
        },
        {
          "value": "chevron",
          "label": "t:options.chevrons"
        },
        {
          "value": "arrows_large",
          "label": "t:options.large_arrows"
        },
        {
          "value": "chevron_large",
          "label": "t:options.large_chevrons"
        },
        {
          "value": "none",
          "label": "t:options.none"
        }
      ]
    },
    {
      "type": "text",
      "id": "default_button_label",
      "label": "Default button label",
      "default": "Shop all"
    }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab title",
          "default": "3–5 Years"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop this age"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop Our Best Seller – Tabs"
    }
  ]
}
{% endschema %}
