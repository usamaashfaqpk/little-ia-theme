<div class="three-columns-layout">
  {% for block in section.blocks %}
    <div class="column" {{ block.shopify_attributes }}>
      {% if block.settings.icon_image != blank %}
        <img
          src="{{ block.settings.icon_image | image_url: width: 80 }}"
          width=""
          height=""
          alt="{{ block.settings.heading | escape }}"
          class="column-icon"
        >
      {% endif %}

      {% if block.settings.heading != blank %}
        <h3 class="column-heading">
          {{ block.settings.heading }}
        </h3>
      {% endif %}
    </div>
  {% endfor %}
</div>

<style>
  .three-columns-layout {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }

  .column {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    width: calc(33.333% - 16px);
    text-align: center;
  }

  .column-icon {
    width: 52px;
    height: 52px;
  }

  @media (max-width: 768px) {
    .column {
      width: calc(50% - 16px);
    }
  }
</style>

{% schema %}
{
  "name": "Three Columns Layout",
  "tag": "section",
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon / Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Column heading"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Three Columns Layout",
      "blocks": [{ "type": "column" }, { "type": "column" }, { "type": "column" }]
    }
  ]
}
{% endschema %}
