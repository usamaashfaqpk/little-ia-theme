<div class="three-columns-layout">
  {% for block in section.blocks %}
    <div class="column" {{ block.shopify_attributes }}>
      {% if block.settings.icon_image != blank %}
        <img
          src="{{ block.settings.icon_image | image_url }}"
          width=""
          height=""
          alt="{{ block.settings.heading | escape }}"
          class="column-icon"
        >
      {% endif %}

      {% if block.settings.heading != blank %}
        <h3 class="column-heading">
          {{ block.settings.heading }}
        </h3>
      {% endif %}
    </div>
  {% endfor %}
</div>

<style>
  .three-columns-layout {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 columns on desktop */
    gap: 16px;
    justify-items: center; /* center content horizontally */
    text-align: center; /* center text inside each column */
    align-items: center; /* center content vertically if needed */
    margin: 20px;
  }

  .column {
    display: flex;
    flex-direction: column; /* stack icon and heading */
    align-items: center; /* center icon and heading horizontally */
    justify-content: center;
  }

  .column-icon {
    width: 24px;
    height: 24px;
  }

  .column-heading {
    font-size: 18px;
  }

  @media (max-width: 768px) {
    .three-columns-layout {
      grid-template-columns: repeat(2, 1fr); /* 2 columns on mobile */
    }

    /* Center the third column on mobile */
    .three-columns-layout .column:nth-child(3) {
      grid-column: 1 / -1; /* span both columns */
    }
  }

</style>

{% schema %}
{
  "name": "Three Columns Layout",
  "tag": "section",
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon / Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Column heading"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Three Columns Layout",
      "blocks": [{ "type": "column" }, { "type": "column" }, { "type": "column" }]
    }
  ]
}
{% endschema %}
