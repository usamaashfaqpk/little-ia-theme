{% endcomment %}

<section class="shop-by-age">
  <div class="page-width">
    {% if section.settings.subtitle != blank %}
      <div class="shop-by-age__subtitle">
        {{ section.settings.subtitle }}
      </div>
    {% endif %}

    {% if section.settings.title != blank %}
      <h2 class="shop-by-age__title">
        {{ section.settings.title }}
      </h2>
    {% endif %}

    <!-- Tabs -->
    <div class="shop-by-age__tabs" role="tablist">
      {% for block in section.blocks %}
        <button
          class="shop-by-age__tab {% if forloop.first %}is-active{% endif %}"
          data-tab="{{ block.id }}"
          role="tab"
          {{ block.shopify_attributes }}
        >
          {{ block.settings.label }}
        </button>
      {% endfor %}
    </div>

    <!-- Panels -->
    {% for block in section.blocks %}
      {% assign collection = collections[block.settings.collection] %}

      <div
        class="shop-by-age__panel {% if forloop.first %}is-active{% endif %}"
        data-panel="{{ block.id }}"
        role="tabpanel"
      >
        <div class="shop-by-age__grid">
          {% for product in collection.products limit: section.settings.products_limit %}
            <a href="{{ product.url }}" class="shop-by-age__card">
              <div class="shop-by-age__image-wrapper">
                {{ product.featured_image | image_url: width: 600 | image_tag: loading: 'lazy' }}
                <span class="shop-by-age__label">
                  {{ product.collections.first.title }}
                </span>
              </div>
            </a>
          {% endfor %}
        </div>

        {% if block.settings.button_label != blank %}
          <div class="shop-by-age__cta">
            <a href="{{ collection.url }}" class="button">
              {{ block.settings.button_label }}
            </a>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% stylesheet %}
  .shop-by-age {
    padding: 60px 0;
  }

  .shop-by-age__subtitle {
    text-align: center;
    font-family: var(--font-accent--family);
    color: var(--color-foreground-subdued);
    margin-bottom: 8px;
  }

  .shop-by-age__title {
    text-align: center;
    margin-bottom: 32px;
  }

  .shop-by-age__tabs {
    display: flex;
    justify-content: center;
    gap: 32px;
    overflow-x: auto;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 32px;
  }

  .shop-by-age__tab {
    background: none;
    border: none;
    padding: 12px 0;
    font-weight: 500;
    cursor: pointer;
    position: relative;
    white-space: nowrap;
  }

  .shop-by-age__tab.is-active::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -1px;
    width: 100%;
    height: 2px;
    background: currentColor;
  }

  .shop-by-age__panel {
    display: none;
  }

  .shop-by-age__panel.is-active {
    display: block;
  }

  .shop-by-age__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  @media (max-width: 990px) {
    .shop-by-age__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .shop-by-age__card {
    display: block;
    position: relative;
  }

  .shop-by-age__image-wrapper {
    position: relative;
    overflow: hidden;
    border-radius: 12px;
  }

  .shop-by-age__image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
  }

  .shop-by-age__label {
    position: absolute;
    bottom: 16px;
    left: 16px;
    color: white;
    font-weight: 600;
    text-transform: uppercase;
  }

  .shop-by-age__cta {
    text-align: center;
    margin-top: 32px;
  }
{% endstylesheet %}

{% javascript %}
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('.shop-by-age__tab');
    const panels = document.querySelectorAll('.shop-by-age__panel');

    tabs.forEach((tab) => {
      tab.addEventListener('click', () => {
        tabs.forEach((t) => t.classList.remove('is-active'));
        panels.forEach((p) => p.classList.remove('is-active'));

        tab.classList.add('is-active');
        document.querySelector(`[data-panel="${tab.dataset.tab}"]`).classList.add('is-active');
      });
    });
  });
{% endjavascript %}

{% schema %}
{
  "name": "Shop by Age",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "shop"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "BY AGE"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Products per tab",
      "min": 2,
      "max": 8,
      "default": 4
    }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Age Tab",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Tab label",
          "default": "3 - 5 YEARS"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop this age"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop by Age",
      "blocks": [{ "type": "tab" }, { "type": "tab" }, { "type": "tab" }]
    }
  ]
}
{% endschema %}
