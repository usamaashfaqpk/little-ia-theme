{% doc %}
  @prompt
    Create a collection carousel that displays multiple collections with images and titles. The carousel should be responsive, allow users to scroll through collections horizontally, and include navigation arrows or dots for easy browsing.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-carousel-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-collection-carousel-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-collection-carousel-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-collection-carousel-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
  }

  .ai-collection-carousel-wrapper-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-collection-carousel-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 10px 0;
  }

  .ai-collection-carousel-track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-collection-carousel-item-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: {{ block.settings.card_width }}px;
    position: relative;
  }

  .ai-collection-carousel-card-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .ai-collection-carousel-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-collection-carousel-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_ratio }}%;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-collection-carousel-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-carousel-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-collection-carousel-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-collection-carousel-overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }}), transparent);
    padding: 20px;
    color: {{ block.settings.text_color }};
  }

  .ai-collection-carousel-collection-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0 0 5px;
    color: {{ block.settings.text_color }};
  }

  .ai-collection-carousel-collection-count-{{ ai_gen_id }} {
    font-size: {{ block.settings.count_size }}px;
    margin: 0;
    opacity: 0.9;
    color: {{ block.settings.text_color }};
  }

  .ai-collection-carousel-nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
    margin-top: {{ block.settings.nav_spacing }}px;
  }

  .ai-collection-carousel-arrow-{{ ai_gen_id }} {
    width: {{ block.settings.arrow_size }}px;
    height: {{ block.settings.arrow_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.arrow_background }};
    color: {{ block.settings.arrow_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .ai-collection-carousel-arrow-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.arrow_hover_background }};
    transform: scale(1.1);
  }

  .ai-collection-carousel-arrow-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-collection-carousel-arrow-{{ ai_gen_id }}:disabled:hover {
    transform: none;
  }

  .ai-collection-carousel-arrow-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-collection-carousel-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-collection-carousel-dot-{{ ai_gen_id }} {
    width: {{ block.settings.dot_size }}px;
    height: {{ block.settings.dot_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    opacity: 0.3;
  }

  .ai-collection-carousel-dot-{{ ai_gen_id }}.active {
    opacity: 1;
    background-color: {{ block.settings.dot_active_color }};
  }

  .ai-collection-carousel-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #999;
  }

  .ai-collection-carousel-empty-{{ ai_gen_id }} p {
    font-size: 16px;
    margin: 10px 0 0;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-carousel-item-{{ ai_gen_id }} {
      width: {{ block.settings.card_width_mobile }}px;
    }

    .ai-collection-carousel-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-collection-carousel-collection-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<collection-carousel-{{ ai_gen_id }}
  class="ai-collection-carousel-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-carousel-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <div class="ai-collection-carousel-header-{{ ai_gen_id }}">
        <h2 class="ai-collection-carousel-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      </div>
    {% endif %}

    {% if block.settings.collections != blank %}
      <div class="ai-collection-carousel-wrapper-{{ ai_gen_id }}">
        <div class="ai-collection-carousel-track-{{ ai_gen_id }}" data-carousel-track>
          {% for collection in block.settings.collections %}
            <div class="ai-collection-carousel-item-{{ ai_gen_id }}">
              <a
                href="{{ collection.url }}"
                class="ai-collection-carousel-card-{{ ai_gen_id }}"
              >
                <div class="ai-collection-carousel-image-wrapper-{{ ai_gen_id }}">
                  {% if collection.featured_image %}
                    <img
                      src="{{ collection.featured_image | image_url: width: 600 }}"
                      alt="{{ collection.featured_image.alt | escape }}"
                      class="ai-collection-carousel-image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="600"
                      height="{{ 600 | times: block.settings.image_ratio | divided_by: 100 }}"
                    >
                  {% else %}
                    <div class="ai-collection-carousel-placeholder-{{ ai_gen_id }}">
                      {{ 'collection-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                  <div class="ai-collection-carousel-overlay-{{ ai_gen_id }}">
                    <h3 class="ai-collection-carousel-collection-title-{{ ai_gen_id }}">
                      {{ collection.title }}
                    </h3>
                    {% if block.settings.show_product_count %}
                      <p class="ai-collection-carousel-collection-count-{{ ai_gen_id }}">
                        {{ collection.products_count }}
                        {% if collection.products_count == 1 %}
                          product
                        {% else %}
                          products
                        {% endif %}
                      </p>
                    {% endif %}
                  </div>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>

        {% if block.settings.show_navigation %}
          <div class="ai-collection-carousel-nav-{{ ai_gen_id }}">
            {% if block.settings.show_arrows %}
              <button
                class="ai-collection-carousel-arrow-{{ ai_gen_id }}"
                data-carousel-prev
                aria-label="Previous"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
              </button>
            {% endif %}

            {% if block.settings.show_dots %}
              <div class="ai-collection-carousel-dots-{{ ai_gen_id }}" data-carousel-dots></div>
            {% endif %}

            {% if block.settings.show_arrows %}
              <button
                class="ai-collection-carousel-arrow-{{ ai_gen_id }}"
                data-carousel-next
                aria-label="Next"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </button>
            {% endif %}
          </div>
        {% endif %}
      </div>
    {% else %}
      <div class="ai-collection-carousel-empty-{{ ai_gen_id }}">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="80"
          height="80"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <rect x="3" y="3" width="7" height="7"></rect>
          <rect x="14" y="3" width="7" height="7"></rect>
          <rect x="14" y="14" width="7" height="7"></rect>
          <rect x="3" y="14" width="7" height="7"></rect>
        </svg>
        <p>Next, add collections to display in the carousel</p>
      </div>
    {% endif %}
  </div>
</collection-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('[data-carousel-track]');
        this.prevButton = this.querySelector('[data-carousel-prev]');
        this.nextButton = this.querySelector('[data-carousel-next]');
        this.dotsContainer = this.querySelector('[data-carousel-dots]');
        this.currentIndex = 0;
      }

      connectedCallback() {
        if (!this.track) return;

        this.items = Array.from(this.track.children);
        this.itemCount = this.items.length;

        if (this.itemCount === 0) return;

        this.setupDots();
        this.setupEventListeners();
        this.updateButtons();
      }

      setupDots() {
        if (!this.dotsContainer) return;

        for (let i = 0; i < this.itemCount; i++) {
          const dot = document.createElement('button');
          dot.className = 'ai-collection-carousel-dot-{{ ai_gen_id }}';
          if (i === 0) dot.classList.add('active');
          dot.setAttribute('aria-label', 'Go to slide ' + (i + 1));
          dot.addEventListener('click', () => this.goToSlide(i));
          this.dotsContainer.appendChild(dot);
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prev());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.next());
        }

        this.track.addEventListener('scroll', () => {
          this.updateCurrentIndex();
        });
      }

      updateCurrentIndex() {
        const scrollLeft = this.track.scrollLeft;
        const itemWidth = this.items[0].offsetWidth;
        const gap = {{ block.settings.gap }};
        this.currentIndex = Math.round(scrollLeft / (itemWidth + gap));
        this.updateDots();
        this.updateButtons();
      }

      updateDots() {
        if (!this.dotsContainer) return;

        const dots = this.dotsContainer.querySelectorAll('.ai-collection-carousel-dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          if (index === this.currentIndex) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      updateButtons() {
        if (this.prevButton) {
          this.prevButton.disabled = this.currentIndex === 0;
        }

        if (this.nextButton) {
          this.nextButton.disabled = this.currentIndex >= this.itemCount - 1;
        }
      }

      prev() {
        if (this.currentIndex > 0) {
          this.goToSlide(this.currentIndex - 1);
        }
      }

      next() {
        if (this.currentIndex < this.itemCount - 1) {
          this.goToSlide(this.currentIndex + 1);
        }
      }

      goToSlide(index) {
        const itemWidth = this.items[0].offsetWidth;
        const gap = {{ block.settings.gap }};
        const scrollPosition = index * (itemWidth + gap);
        this.track.scrollTo({
          left: scrollPosition,
          behavior: 'smooth'
        });
        this.currentIndex = index;
        this.updateDots();
        this.updateButtons();
      }
    }

    customElements.define('collection-carousel-{{ ai_gen_id }}', CollectionCarousel{{ ai_gen_id }});
  })();
</script>

